{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,		
		"baseUrl": "./app/javascript"
	},
	"include": [
		"./app/javascript/**/*.ts*"
	]
}